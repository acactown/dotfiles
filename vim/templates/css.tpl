* /* Start clean: zero out default nonsense */
{
  margin: 0;
  padding: 0;
}

html
{
  font-size: 100% /* Just to help IE zoom */
}

body
{
  font-size: 62.5%; /* Set default font-size at 10px */
}

h1, h2, h3, h4
{
  margin-bottom: .5em;
  line-height: 1.2;
}

h1
{
  font-size: 2.0em; /* Sets headings to 20px */
}

p
{
  font-size: 1.2em; /* Sets default to 12px */
  line-height: 1.5;
  margin-bottom: 1em;
}
